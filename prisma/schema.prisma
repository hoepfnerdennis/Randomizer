generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Randomizer {
  id       String  @id @default(uuid())
  name     String
  values   Value[]
  password String
  // manager  User    @relation(fields: [userId], references: [id])
  // userId   String
}

model Value {
  id           String      @id @default(uuid())
  name         String
  Randomizer   Randomizer? @relation(fields: [randomizerId], references: [id])
  randomizerId String?
}

